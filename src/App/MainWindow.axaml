<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
        x:Class="App.MainWindow"
        Title=".NET Audio Controller v0.1 | ONNX | NAudio"
        Background="#2D2D30"
        FontFamily="Segoe UI">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Audio Control System" 
                       FontSize="16" 
                       Foreground="White" 
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,0"/>
            
            <Separator Margin="0,20,0,20" Background="#555"/>

            <!-- Audio Control Section -->
            <TextBlock Text="Input Device:" 
                       FontSize="12" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            
            <ComboBox Name="InputDeviceComboBox"
                      Foreground="White"
                      Background="#444444"
                      Margin="0,0,0,10"
                      SelectionChanged="OnInputDeviceSelectionChanged"/>
            
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Name="MicrophoneButton"
                        Content="Start Microphone"
                        Foreground="White"
                        Click="OnMicrophoneButtonClick"/>
                
                <Button Name="SaveButton"
                        Content="Save Audio"
                        Foreground="White"
                        Background="#666666"
                        IsEnabled="False"
                        Click="OnSaveButtonClick"/>
            </StackPanel>
            
            <TextBlock Text="Audio Level:" 
                       FontSize="12" 
                       Foreground="White" 
                       Margin="0,10,0,5"/>
            
            <TextBlock Name="AudioLevelText"
                       Text="0.0% (-60.0 dB)"
                       FontSize="14"
                       Foreground="#909090"
                       Margin="0,0,0,5"/>

            <Separator Margin="0,20,0,20" Background="#555"/>

            <!-- Debug Logger Section -->
            <TextBlock Text="Debug Console" 
                       FontSize="14" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>
            
            <Border Background="#1E1E1E" 
                    BorderBrush="#555555" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Height="200" 
                    Margin="0,0,0,10">
                <ScrollViewer Name="DebugScrollViewer" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Padding="10">
                    <TextBlock Name="DebugTextBlock" 
                               Text="[DEBUG] Application started - Ready for audio processing" 
                               Foreground="#90EE90" 
                               FontFamily="Consolas, Courier New, monospace" 
                               FontSize="11" 
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Name="ClearDebugButton"
                        Content="Clear Debug"
                        Foreground="White"
                        Background="#666666"
                        Margin="0,0,10,0"
                        Click="OnClearDebugClick"/>
                
                <Button Name="CopyDebugButton"
                        Content="Copy Debug"
                        Foreground="White"
                        Background="#666666"
                        Click="OnCopyDebugClick"/>
            </StackPanel>
                

            <Separator Margin="0,20,0,20" Background="#555"/>

            <!-- System Information -->
            <TextBlock Name="PlatformOS" 
                       Text="OS: Detecting" 
                       Foreground="White" 
                       Margin="0,2"/>

            <TextBlock Name="DotNetVersionText"
                       Text=".NET: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="Is64BitOSText"
                       Text="64-bit OS: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="Is64BitProcessText"
                       Text="64-bit Process: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="RuntimeIdentifierText"
                       Text="Runtime ID: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="ProcessorCountText"
                       Text="Processors: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="WorkingSetText"
                       Text="Working Set: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="TotalMemoryText"
                       Text="Total Memory: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="MemoryText"
                       Text="Memory: Detecting" 
                       Foreground="White" 
                       Margin="0,2"/>

            <TextBlock Name="GpuAccelerationText"
                       Text="GPU Acceleration: Detecting" 
                       Foreground="White" 
                       Margin="0,2"/>
            
            <TextBlock Name="AudioBackendText"
                       Text="Audio Backend: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="AudioFormatText"
                       Text="Audio Format: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
        </StackPanel>
    </ScrollViewer>
</Window>
