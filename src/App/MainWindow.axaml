<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
        x:Class="App.MainWindow"
        Title=".NET Audio Controller v0.1 | ONNX | NAudio"
        Background="#2D2D30"
        FontFamily="Segoe UI">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Audio Control System" 
                       FontSize="16" 
                       Foreground="White" 
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,0"/>
            
            
            <Separator Margin="0,20,0,20" Background="#555"/>

            
            
            <TextBlock Text="Output Device:" 
                       FontSize="12" 
                       Foreground="White" 
                       Margin="0,5,0,2"/>
                       
            <ComboBox Name="OutputDeviceComboBox"
                      Background="#3C3C3C"
                      Foreground="White"
                      Margin="0,0,0,10"
                      SelectionChanged="OnOutputDeviceSelectionChanged"/>
            
            <TextBlock Text="Input Device:" 
                       FontSize="12" 
                       Foreground="White" 
                       Margin="0,5,0,2"/>
                       
            <ComboBox Name="InputDeviceComboBox"
                      Background="#3C3C3C"
                      Foreground="White"
                      Margin="0,0,0,10"
                      SelectionChanged="OnInputDeviceSelectionChanged"/>
            
            <Separator Margin="0,20,0,20" Background="#555"/>

            

            <TextBlock Name="PlatformOS" 
                       Text="OS: Detecting" 
                       Foreground="White" 
                       Margin="0,2"/>

            <TextBlock Name="DotNetVersionText"
                       Text=".NET: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="Is64BitOSText"
                       Text="64-bit OS: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="Is64BitProcessText"
                       Text="64-bit Process: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="RuntimeIdentifierText"
                       Text="Runtime ID: Detecting"
                       Foreground="White"
                       Margin="0,2"/>

            <TextBlock Name="ProcessorCountText"
                       Text="Processors: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="WorkingSetText"
                       Text="Working Set: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="TotalMemoryText"
                       Text="Total Memory: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
            
            <TextBlock Name="MemoryText"
                       Text="Memory: Detecting" 
                       Foreground="White" 
                       Margin="0,2"/>

            <TextBlock Name="GpuAccelerationText"
                       Text="GPU Acceleration: Detecting" 
                       Foreground="White" 
                       Margin="0,2"/>
            
            <TextBlock Name="AudioBackendText"
                       Text="Audio Backend: Detecting"
                       Foreground="White"
                       Margin="0,2"/>
        </StackPanel>
    </ScrollViewer>
</Window>
